{
  "openapi": "3.0.1",
  "info": {
    "title": "ChatGPT Connector",
    "version": "1.1.0",
    "description": "Connector API for HubSpot tickets, contacts, companies, deals, associations, properties, workflows, knowledge base, and learning services. Responses always return application/json."
  },
  "servers": [
    {
      "url": "https://hubspot-connector.onrender.com/",
      "description": "Production server"
    }
  ],
  "paths": {
    "/ticketsTopCompanies": {
      "get": {
        "operationId": "ticketsTopCompanies",
        "summary": "Get top companies by ticket count",
        "parameters": [
          { "name": "days", "in": "query", "schema": { "type": "integer" } },
          { "name": "top", "in": "query", "schema": { "type": "integer", "default": 5 } },
          { "name": "pipeline", "in": "query", "schema": { "type": "string" } },
          { "name": "stage", "in": "query", "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "Top companies", "content": { "application/json": { "schema": { "type": "object" } } } } }
      }
    },
    "/ticketsSearch": {
      "post": {
        "operationId": "ticketsSearch",
        "summary": "Search tickets",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object" } } } },
        "responses": { "200": { "description": "Ticket search results", "content": { "application/json": { "schema": { "type": "object" } } } } }
      }
    },
    "/ticketsUpdate/{ticket_id}": {
      "patch": {
        "operationId": "ticketsUpdate",
        "summary": "Update a ticket",
        "parameters": [ { "name": "ticket_id", "in": "path", "required": true, "schema": { "type": "string" } } ],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object" } } } },
        "responses": { "200": { "description": "Updated ticket", "content": { "application/json": { "schema": { "type": "object" } } } } }
      }
    },
    "/contactsGet/{contact_id}": {
      "get": {
        "operationId": "contactsGet",
        "summary": "Get a contact",
        "parameters": [ { "name": "contact_id", "in": "path", "required": true, "schema": { "type": "string" } } ],
        "responses": { "200": { "description": "Contact object", "content": { "application/json": { "schema": { "type": "object" } } } } }
      }
    },
    "/contactsUpsert": {
      "post": {
        "operationId": "contactsUpsert",
        "summary": "Create or update a contact",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object" } } } },
        "responses": { "200": { "description": "Upserted contact", "content": { "application/json": { "schema": { "type": "object" } } } } }
      }
    },
    "/companiesGet/{company_id}": {
      "get": {
        "operationId": "companiesGet",
        "summary": "Get a company",
        "parameters": [ { "name": "company_id", "in": "path", "required": true, "schema": { "type": "string" } } ],
        "responses": { "200": { "description": "Company object", "content": { "application/json": { "schema": { "type": "object" } } } } }
      }
    },
    "/companiesUpsert": {
      "post": {
        "operationId": "companiesUpsert",
        "summary": "Create or update a company",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object" } } } },
        "responses": { "200": { "description": "Upserted company", "content": { "application/json": { "schema": { "type": "object" } } } } }
      }
    },
    "/dealsGet/{deal_id}": {
      "get": {
        "operationId": "dealsGet",
        "summary": "Get a deal",
        "parameters": [ { "name": "deal_id", "in": "path", "required": true, "schema": { "type": "string" } } ],
        "responses": { "200": { "description": "Deal object", "content": { "application/json": { "schema": { "type": "object" } } } } }
      }
    },
    "/dealsUpsert": {
      "post": {
        "operationId": "dealsUpsert",
        "summary": "Create or update a deal",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object" } } } },
        "responses": { "200": { "description": "Upserted deal", "content": { "application/json": { "schema": { "type": "object" } } } } }
      }
    },
    "/associationsCreate": {
      "post": {
        "operationId": "associationsCreate",
        "summary": "Create an association",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object" } } } },
        "responses": { "200": { "description": "Association created", "content": { "application/json": { "schema": { "type": "object" } } } } }
      }
    },
    "/propertiesList/{object_type}": {
      "get": {
        "operationId": "propertiesList",
        "summary": "List properties for an object type",
        "parameters": [ { "name": "object_type", "in": "path", "required": true, "schema": { "type": "string" } } ],
        "responses": { "200": { "description": "Properties list", "content": { "application/json": { "schema": { "type": "object" } } } } }
      }
    },
    "/propertiesUpdate/{object_type}/{property_name}": {
      "post": {
        "operationId": "propertiesUpdate",
        "summary": "Create or update a property",
        "parameters": [
          { "name": "object_type", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "property_name", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object" } } } },
        "responses": { "200": { "description": "Property updated", "content": { "application/json": { "schema": { "type": "object" } } } } }
      }
    },
    "/workflowsList": {
      "get": {
        "operationId": "workflowsList",
        "summary": "List workflows",
        "responses": { "200": { "description": "Workflows list", "content": { "application/json": { "schema": { "type": "object" } } } } }
      }
    },
    "/kbArticlesList": {
      "get": {
        "operationId": "kbArticlesList",
        "summary": "List knowledge base articles",
        "parameters": [
          { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 20 } },
          { "name": "after", "in": "query", "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "KB articles list", "content": { "application/json": { "schema": { "type": "object" } } } } }
      }
    },
    "/kbArticlesCreate": {
      "post": {
        "operationId": "kbArticlesCreate",
        "summary": "Create a knowledge base article",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object" } } } },
        "responses": { "200": { "description": "Created article", "content": { "application/json": { "schema": { "type": "object" } } } } }
      }
    },
    "/learningSuggestions": {
      "get": {
        "operationId": "learningSuggestions",
        "summary": "Get learning suggestions",
        "responses": { "200": { "description": "Learning suggestions", "content": { "application/json": { "schema": { "type": "object" } } } } }
      }
    },
    "/learningKbCandidates": {
      "get": {
        "operationId": "learningKbCandidates",
        "summary": "Get learning KB candidates",
        "responses": { "200": { "description": "Learning KB candidates", "content": { "application/json": { "schema": { "type": "object" } } } } }
      }
    },
    "/schema.json": {
      "get": {
        "operationId": "getSchema",
        "summary": "Serve schema",
        "responses": { "200": { "description": "OpenAPI schema", "content": { "application/json": { "schema": { "type": "object" } } } } }
      }
    }
  }
}
