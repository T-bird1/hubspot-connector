{
  "openapi": "3.1.0",
  "info": {
    "title": "ChatGPT Connector",
    "version": "1.2.0",
    "description": "Connector API for HubSpot tickets, contacts, companies, deals, associations, properties, workflows, knowledge base, and learning services. Responses always return application/json."
  },
  "servers": [
    {
      "url": "https://hubspot-connector.onrender.com",
      "description": "Production server"
    }
  ],
  "paths": {
    "/tickets/top-companies": {
      "get": {
        "operationId": "ticketsTopCompanies",
        "summary": "Get top companies by ticket count",
        "parameters": [
          { "name": "days", "in": "query", "required": false, "schema": { "type": "integer", "minimum": 0 } },
          { "name": "top", "in": "query", "required": false, "schema": { "type": "integer", "minimum": 1, "default": 5 } },
          { "name": "pipeline", "in": "query", "required": false, "schema": { "type": "string" } },
          { "name": "stage", "in": "query", "required": false, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Top companies", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } }
        }
      }
    },
    "/tickets/search": {
      "post": {
        "operationId": "ticketsSearch",
        "summary": "Search tickets",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } },
        "responses": {
          "200": { "description": "Ticket search results", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } }
        }
      }
    },
    "/tickets/update/{ticket_id}": {
      "patch": {
        "operationId": "ticketsUpdate",
        "summary": "Update a ticket",
        "parameters": [
          { "name": "ticket_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } },
        "responses": {
          "200": { "description": "Updated ticket", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } }
        }
      }
    },
    "/contacts/get/{contact_id}": {
      "get": {
        "operationId": "contactsGet",
        "summary": "Get a contact",
        "parameters": [
          { "name": "contact_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Contact object", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } }
        }
      }
    },
    "/contacts/upsert": {
      "post": {
        "operationId": "contactsUpsert",
        "summary": "Create or update a contact",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } },
        "responses": {
          "200": { "description": "Upserted contact", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } }
        }
      }
    },
    "/companies/get/{company_id}": {
      "get": {
        "operationId": "companiesGet",
        "summary": "Get a company",
        "parameters": [
          { "name": "company_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Company object", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } }
        }
      }
    },
    "/companies/upsert": {
      "post": {
        "operationId": "companiesUpsert",
        "summary": "Create or update a company",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } },
        "responses": {
          "200": { "description": "Upserted company", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } }
        }
      }
    },
    "/deals/get/{deal_id}": {
      "get": {
        "operationId": "dealsGet",
        "summary": "Get a deal",
        "parameters": [
          { "name": "deal_id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Deal object", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } }
        }
      }
    },
    "/deals/upsert": {
      "post": {
        "operationId": "dealsUpsert",
        "summary": "Create or update a deal",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } },
        "responses": {
          "200": { "description": "Upserted deal", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } }
        }
      }
    },
    "/associations/create": {
      "post": {
        "operationId": "associationsCreate",
        "summary": "Create an association",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } },
        "responses": {
          "200": { "description": "Association result", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } }
        }
      }
    },
    "/properties/list/{object_type}": {
      "get": {
        "operationId": "propertiesList",
        "summary": "List properties for an object type",
        "parameters": [
          { "name": "object_type", "in": "path", "required": true, "schema": { "type": "string", "example": "tickets" } }
        ],
        "responses": {
          "200": { "description": "Properties list", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } }
        }
      }
    },
    "/properties/update/{object_type}/{property_name}": {
      "post": {
        "operationId": "propertiesUpdate",
        "summary": "Create or update a property",
        "parameters": [
          { "name": "object_type", "in": "path", "required": true, "schema": { "type": "string", "example": "tickets" } },
          { "name": "property_name", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } },
        "responses": {
          "200": { "description": "Property definition result", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } }
        }
      }
    },
    "/workflows/list": {
      "get": {
        "operationId": "workflowsList",
        "summary": "List workflows",
        "responses": {
          "200": { "description": "Workflows list", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } }
        }
      }
    },
    "/kb/articles/list": {
      "get": {
        "operationId": "kbArticlesList",
        "summary": "List knowledge base articles",
        "parameters": [
          { "name": "limit", "in": "query", "required": false, "schema": { "type": "integer", "default": 20, "minimum": 1 } },
          { "name": "after", "in": "query", "required": false, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "KB articles list", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } }
        }
      }
    },
    "/kb/articles/create": {
      "post": {
        "operationId": "kbArticlesCreate",
        "summary": "Create a knowledge base article",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } },
        "responses": {
          "200": { "description": "Created article", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } }
        }
      }
    },
    "/learning/suggestions": {
      "get": {
        "operationId": "learningSuggestions",
        "summary": "Get learning suggestions",
        "responses": {
          "200": { "description": "Learning suggestions", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } }
        }
      }
    },
    "/learning/kb-candidates": {
      "get": {
        "operationId": "learningKbCandidates",
        "summary": "Get learning KB candidates",
        "responses": {
          "200": { "description": "Learning KB candidates", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnyObject" } } } }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AnyObject": {
        "type": "object",
        "properties": {},
        "additionalProperties": true
      }
    }
  }
}
